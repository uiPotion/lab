<header class="navbar" id="navbar" role="banner">
  <div class="container navbar__container">
    <a href="{{relativePath 'index.html'}}" class="navbar__logo" aria-label="PotionKit Home">
      PotionKit
    </a>
    
    <nav class="navbar__nav" role="navigation" aria-label="Main navigation">
      <a href="{{relativePath 'index.html#features'}}" class="navbar__link">Features</a>
      <a href="{{relativePath 'index.html#testimonials'}}" class="navbar__link">Testimonials</a>
      <a href="{{relativePath 'index.html#pricing'}}" class="navbar__link">Pricing</a>
      <a href="{{relativePath 'blog.html'}}" class="navbar__link">Blog</a>
      <a href="{{relativePath 'login.html'}}" class="navbar__link">AI Chat</a>
    </nav>
    
    <div class="navbar__actions">
      <button 
        class="theme-toggle" 
        id="theme-toggle"
        aria-label="Toggle dark mode"
        type="button"
      >
        <!-- Sun icon -->
        <svg class="theme-toggle__icon theme-toggle__icon--sun" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="4"/>
          <path d="M12 2v2"/>
          <path d="M12 20v2"/>
          <path d="m4.93 4.93 1.41 1.41"/>
          <path d="m17.66 17.66 1.41 1.41"/>
          <path d="M2 12h2"/>
          <path d="M20 12h2"/>
          <path d="m6.34 17.66-1.41 1.41"/>
          <path d="m19.07 4.93-1.41 1.41"/>
        </svg>
        <!-- Moon icon -->
        <svg class="theme-toggle__icon theme-toggle__icon--moon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/>
        </svg>
      </button>
      
      <!-- User Menu - only visible on chat page (logged in) -->
      <div class="user-menu" id="user-menu">
        <button 
          class="user-menu__trigger" 
          id="user-menu-trigger"
          aria-label="Open user menu"
          aria-expanded="false"
          aria-haspopup="true"
          type="button"
        >
          <div class="user-menu__avatar">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
          </div>
        </button>
        
        <div class="user-menu__dropdown" id="user-menu-dropdown" aria-hidden="true">
          <div class="user-menu__header">
            <div class="user-menu__header-avatar">JD</div>
            <div class="user-menu__header-info">
              <span class="user-menu__header-name">John Doe</span>
              <span class="user-menu__header-email">john@example.com</span>
            </div>
          </div>
          
          <div class="user-menu__divider"></div>
          
          <ul class="user-menu__items" role="menu">
            <li class="user-menu__item" role="none">
              <a href="#" class="user-menu__link" role="menuitem">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                  <circle cx="12" cy="7" r="4"/>
                </svg>
                <span>Profile</span>
              </a>
            </li>
            <li class="user-menu__item" role="none">
              <a href="#" class="user-menu__link" role="menuitem">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                <span>Settings</span>
              </a>
            </li>
            <li class="user-menu__item" role="none">
              <a href="#" class="user-menu__link" role="menuitem">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                  <polyline points="14 2 14 8 20 8"/>
                  <line x1="16" y1="13" x2="8" y2="13"/>
                  <line x1="16" y1="17" x2="8" y2="17"/>
                </svg>
                <span>Billing</span>
              </a>
            </li>
            <li class="user-menu__item" role="none">
              <a href="#" class="user-menu__link" role="menuitem">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M12 20h9"/>
                  <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/>
                </svg>
                <span>API Keys</span>
              </a>
            </li>
          </ul>
          
          <div class="user-menu__divider"></div>
          
          <ul class="user-menu__items" role="menu">
            <li class="user-menu__item" role="none">
              <a href="#" class="user-menu__link user-menu__link--danger" role="menuitem">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                  <polyline points="16 17 21 12 16 7"/>
                  <line x1="21" y1="12" x2="9" y2="12"/>
                </svg>
                <span>Sign out</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
      
      <!-- Logout button - only visible on protected pages -->
      <a 
        href="{{relativePath 'login.html'}}" 
        class="navbar__logout" 
        id="navbar-logout"
        aria-label="Sign out"
        title="Sign out"
      >
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
          <polyline points="16 17 21 12 16 7"/>
          <line x1="21" y1="12" x2="9" y2="12"/>
        </svg>
      </a>
      
      <button 
        class="navbar__menu-btn" 
        id="mobile-menu-btn"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
        type="button"
      >
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <line x1="4" x2="20" y1="12" y2="12"/>
          <line x1="4" x2="20" y1="6" y2="6"/>
          <line x1="4" x2="20" y1="18" y2="18"/>
        </svg>
      </button>
    </div>
  </div>
</header>

