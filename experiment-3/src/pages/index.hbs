<!-- Pricing Toggle Script -->
<script>
(function() {
  const toggleSwitch = document.querySelector('[data-toggle]');
  const monthlyLabel = document.querySelector('[data-billing="monthly"]');
  const yearlyLabel = document.querySelector('[data-billing="yearly"]');
  const priceElements = document.querySelectorAll('[data-price-monthly]');
  const savingsElements = document.querySelectorAll('[data-yearly-savings]');
  const periodElements = document.querySelectorAll('.pricing-card__period');
  
  let isYearly = false;
  
  function updatePrices(yearly) {
    isYearly = yearly;
    
    // Update toggle switch
    toggleSwitch.setAttribute('aria-checked', yearly);
    toggleSwitch.classList.toggle('billing-toggle__switch--yearly', yearly);
    
    // Update labels
    monthlyLabel.classList.toggle('billing-toggle__label--active', !yearly);
    monthlyLabel.setAttribute('aria-pressed', !yearly);
    yearlyLabel.classList.toggle('billing-toggle__label--active', yearly);
    yearlyLabel.setAttribute('aria-pressed', yearly);
    
    // Update prices with animation
    priceElements.forEach(el => {
      const monthly = el.getAttribute('data-price-monthly');
      const yearly = el.getAttribute('data-price-yearly');
      
      // Fade out
      el.style.opacity = '0';
      el.style.transform = 'translateY(-4px)';
      
      setTimeout(() => {
        el.textContent = isYearly ? yearly : monthly;
        // Fade in
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
      }, 150);
    });
    
    // Update periods
    periodElements.forEach(el => {
      el.textContent = isYearly ? '/year' : '/month';
    });
    
    // Show/hide yearly savings
    savingsElements.forEach(el => {
      el.hidden = !isYearly;
    });
  }
  
  // Toggle switch click
  toggleSwitch.addEventListener('click', () => {
    updatePrices(!isYearly);
  });
  
  // Label clicks
  monthlyLabel.addEventListener('click', () => {
    if (isYearly) updatePrices(false);
  });
  
  yearlyLabel.addEventListener('click', () => {
    if (!isYearly) updatePrices(true);
  });
  
  // Keyboard support
  toggleSwitch.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      updatePrices(!isYearly);
    }
  });
})();
</script>
