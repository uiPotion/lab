{{> head bodyClass='page-blog'}}

{{> navbar}}

<main class="main">
  <!-- Blog Hero -->
  <section class="blog-hero">
    <div class="container">
      <h1 class="blog-hero__title">From the Blog</h1>
      <p class="blog-hero__subtitle">Insights, tutorials, and thoughts on AI, design, and development.</p>
    </div>
  </section>

  <div class="container">
    <!-- All posts via postsList (hrld-post-list); first = featured, rest = grid. coverImage, excerpt, tags from front matter -->
    <div class="blog-posts">
      {{postsList dateFormat="dd mmmm yyyy" noReadMoreButton=true noImage=false noTags=false noExcerpt=false noDate=false}}
    </div>

    <!-- Newsletter CTA -->
    <section class="blog-cta">
      <div class="blog-cta__content">
        <h2 class="blog-cta__title">Stay in the loop</h2>
        <p class="blog-cta__text">Get the latest articles and tutorials delivered straight to your inbox. No spam, unsubscribe anytime.</p>
        <form class="blog-cta__form" onsubmit="event.preventDefault(); showToast('Thanks for subscribing!', 'success');">
          <input type="email" class="blog-cta__input" placeholder="Enter your email" required>
          <button type="submit" class="blog-cta__btn">Subscribe</button>
        </form>
      </div>
    </section>
  </div>
</main>

{{> footer}}
