{{> head title="Sign In" description="Sign in to access your AI assistant" extraStyles="styles/auth.css"}}

{{> navbar}}

<main id="main-content" class="auth-page">
  <div class="grid-pattern"></div>
  
  <div class="auth-container">
    <div class="auth-card">
      <!-- Header -->
      <div class="auth-card__header">
        <div class="auth-card__logo">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
        </div>
        <h1 class="auth-card__title">Welcome back</h1>
        <p class="auth-card__subtitle">Sign in to access your AI assistant</p>
      </div>

      <!-- Form Level Error -->
      <div class="auth-card__error" id="form-error" role="alert" aria-live="assertive" hidden>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <span id="form-error-message"></span>
      </div>

      <!-- Login Form -->
      <form class="auth-form" id="login-form" novalidate>
        <!-- Email Field -->
        <div class="form-field" id="email-field">
          <label for="email" class="form-field__label">
            Email address
            <span class="form-field__required" aria-hidden="true">*</span>
          </label>
          <div class="form-field__input-wrapper">
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="form-field__input"
              placeholder="name@example.com"
              autocomplete="email"
              aria-required="true"
              aria-describedby="email-error"
              aria-invalid="false"
            >
            <div class="form-field__icon form-field__icon--success" hidden>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
          </div>
          <span class="form-field__error" id="email-error" role="alert" aria-live="polite"></span>
        </div>

        <!-- Password Field -->
        <div class="form-field" id="password-field">
          <label for="password" class="form-field__label">
            Password
            <span class="form-field__required" aria-hidden="true">*</span>
          </label>
          <div class="form-field__input-wrapper">
            <input 
              type="password" 
              id="password" 
              name="password" 
              class="form-field__input"
              placeholder="Enter your password"
              autocomplete="current-password"
              aria-required="true"
              aria-describedby="password-error"
              aria-invalid="false"
            >
            <button 
              type="button" 
              class="form-field__toggle-password" 
              id="toggle-password"
              aria-label="Show password"
              aria-pressed="false"
            >
              <!-- Show password icon (eye) - visible when password is hidden -->
              <svg class="form-field__toggle-icon form-field__toggle-icon--show" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M1 12s4-8 11-8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
              <!-- Hide password icon (eye-off) - visible when password is shown -->
              <svg class="form-field__toggle-icon form-field__toggle-icon--hide" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" hidden>
                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                <line x1="1" y1="1" x2="23" y2="23"></line>
              </svg>
            </button>
          </div>
          <span class="form-field__error" id="password-error" role="alert" aria-live="polite"></span>
        </div>

        <!-- Remember Me & Forgot Password -->
        <div class="auth-form__options">
          <label class="checkbox">
            <input type="checkbox" name="remember-me" id="remember-me" class="checkbox__input">
            <span class="checkbox__checkmark">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span class="checkbox__label">Remember me</span>
          </label>
          <a href="#" class="auth-form__forgot-link">Forgot password?</a>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn--primary btn--large auth-form__submit" id="submit-btn">
          <span class="auth-form__submit-text">Sign in</span>
          <span class="auth-form__submit-spinner" hidden>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="2" x2="12" y2="6"></line>
              <line x1="12" y1="18" x2="12" y2="22"></line>
              <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
              <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
              <line x1="2" y1="12" x2="6" y2="12"></line>
              <line x1="18" y1="12" x2="22" y2="12"></line>
              <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
              <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
            </svg>
          </span>
        </button>
      </form>

      <!-- Demo Credentials -->
      <div class="auth-card__demo" id="demo-credentials" title="Double-click to auto-fill">
        <p class="auth-card__demo-title">Demo credentials</p>
        <div class="auth-card__demo-credentials">
          <code>demo@example.com</code>
          <code>SecurePass2024!xK</code>
        </div>
        <p class="auth-card__demo-hint">Double-click to fill</p>
      </div>

      <!-- Footer -->
      <div class="auth-card__footer">
        <p>Don't have an account? <a href="#" class="auth-card__link">Create one</a></p>
      </div>
    </div>
  </div>
</main>

{{> footer}}

<script src="{{relativePath 'assets/js/mock-auth.js'}}"></script>
<script src="{{relativePath 'assets/js/login.js'}}"></script>
