<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Admin Dashboard">
  <title>Dashboard - Nexus</title>
  <link rel="stylesheet" href="{{relativePath 'styles/main.css'}}">
  <link rel="stylesheet" href="{{relativePath 'styles/data-table.css'}}">
  <link rel="stylesheet" href="{{relativePath 'styles/form-fixes.css'}}">
  <link rel="stylesheet" href="{{relativePath 'styles/toast.css'}}">
  <link rel="stylesheet" href="{{relativePath 'styles/confirm-dialog.css'}}">
</head>
<body>
  <div class="dashboard" id="dashboard">
    <!-- Mobile Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay" aria-hidden="true"></div>
    
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar" role="navigation" aria-label="Main navigation">
      <div class="sidebar__header">
        <a href="{{relativePath 'index.html'}}" class="sidebar__logo">
          <span class="sidebar__logo-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="12 2 22 8.5 22 15.5 12 22 2 15.5 2 8.5 12 2"/>
            </svg>
          </span>
          <span class="sidebar__logo-text">Nexus</span>
        </a>
      </div>
      
      <nav class="sidebar__nav">
        <div class="sidebar__nav-section">
          <div class="sidebar__nav-title">Overview</div>
          <ul class="sidebar__nav-list">
            <li class="sidebar__nav-item">
              <a href="#" class="sidebar__nav-link sidebar__nav-link--active" aria-current="page">
                <svg class="sidebar__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="7" height="7"></rect>
                  <rect x="14" y="3" width="7" height="7"></rect>
                  <rect x="14" y="14" width="7" height="7"></rect>
                  <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <span class="sidebar__nav-text">Dashboard</span>
              </a>
            </li>
            <li class="sidebar__nav-item">
              <a href="#" class="sidebar__nav-link">
                <svg class="sidebar__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="20" x2="18" y2="10"></line>
                  <line x1="12" y1="20" x2="12" y2="4"></line>
                  <line x1="6" y1="20" x2="6" y2="14"></line>
                </svg>
                <span class="sidebar__nav-text">Analytics</span>
              </a>
            </li>
            <li class="sidebar__nav-item">
              <a href="#" class="sidebar__nav-link">
                <svg class="sidebar__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                </svg>
                <span class="sidebar__nav-text">Messages</span>
              </a>
            </li>
          </ul>
        </div>
        
        <div class="sidebar__nav-section">
          <div class="sidebar__nav-title">Management</div>
          <ul class="sidebar__nav-list">
            <li class="sidebar__nav-item">
              <a href="#" class="sidebar__nav-link">
                <svg class="sidebar__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                <span class="sidebar__nav-text">Users</span>
              </a>
            </li>
            <li class="sidebar__nav-item">
              <a href="#" class="sidebar__nav-link">
                <svg class="sidebar__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <span class="sidebar__nav-text">Events</span>
              </a>
            </li>
            <li class="sidebar__nav-item">
              <a href="#" class="sidebar__nav-link">
                <svg class="sidebar__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                </svg>
                <span class="sidebar__nav-text">Reviews</span>
              </a>
            </li>
          </ul>
        </div>
        
        <div class="sidebar__nav-section">
          <div class="sidebar__nav-title">System</div>
          <ul class="sidebar__nav-list">
            <li class="sidebar__nav-item">
              <a href="#" class="sidebar__nav-link">
                <svg class="sidebar__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="3"></circle>
                  <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06-.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                </svg>
                <span class="sidebar__nav-text">Settings</span>
              </a>
            </li>
            <li class="sidebar__nav-item">
              <a href="#" class="sidebar__nav-link">
                <svg class="sidebar__nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="12" y1="8" x2="12" y2="12"></line>
                  <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
                <span class="sidebar__nav-text">Help</span>
              </a>
            </li>
          </ul>
        </div>
      </nav>
      
      <div class="sidebar__collapse">
        <button class="sidebar__collapse-btn" id="sidebarCollapseBtn" aria-label="Toggle sidebar" aria-expanded="true">
          <svg class="sidebar__collapse-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="11 17 6 12 11 7"></polyline>
            <polyline points="18 17 13 12 18 7"></polyline>
          </svg>
          <span class="sidebar__collapse-text">Collapse</span>
        </button>
      </div>
    </aside>
    
    <!-- Main Content -->
    <div class="dashboard__main">
      <!-- Header -->
      <header class="dashboard-header">
        <div class="dashboard-header__left">
          <button class="dashboard-header__menu-btn" id="mobileMenuBtn" aria-label="Toggle menu" aria-expanded="false" aria-controls="sidebar">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="3" y1="12" x2="21" y2="12"></line>
              <line x1="3" y1="6" x2="21" y2="6"></line>
              <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
          </button>
          <h1 class="dashboard-header__title">Dashboard</h1>
        </div>
        
        <div class="dashboard-header__right">
          <!-- Notifications -->
          <div class="dashboard-header__notifications">
            <button class="dashboard-header__btn" id="notificationsBtn" aria-label="Notifications: 3 unread" aria-haspopup="true" aria-expanded="false" aria-controls="notificationsDropdown">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
              </svg>
              <span class="dashboard-header__badge dashboard-header__badge--count" aria-label="3 unread notifications">3</span>
            </button>
            
            <div class="dropdown dropdown--notifications" id="notificationsDropdown" role="menu" aria-labelledby="notificationsBtn">
              <div class="dropdown__header">
                <div class="dropdown__title">Notifications</div>
                <div class="dropdown__subtitle">3 unread</div>
              </div>
              <ul class="dropdown__list">
                <li class="notification-item notification-item--unread" role="menuitem">
                  <div class="notification-item__icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="var(--color-success)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                      <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                  </div>
                  <div class="notification-item__content">
                    <div class="notification-item__title">Payment Successful</div>
                    <div class="notification-item__message">Your subscription has been renewed successfully.</div>
                    <div class="notification-item__time">5 min ago</div>
                  </div>
                </li>
                <li class="notification-item notification-item--unread" role="menuitem">
                  <div class="notification-item__icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="var(--color-accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                      <circle cx="9" cy="7" r="4"></circle>
                      <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    </svg>
                  </div>
                  <div class="notification-item__content">
                    <div class="notification-item__title">New User Registered</div>
                    <div class="notification-item__message">Sarah Johnson just signed up for a Pro plan.</div>
                    <div class="notification-item__time">1 hour ago</div>
                  </div>
                </li>
                <li class="notification-item" role="menuitem">
                  <div class="notification-item__icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="var(--color-warning)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                      <line x1="12" y1="9" x2="12" y2="13"></line>
                      <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                  </div>
                  <div class="notification-item__content">
                    <div class="notification-item__title">Storage Warning</div>
                    <div class="notification-item__message">You're using 85% of your storage quota.</div>
                    <div class="notification-item__time">3 hours ago</div>
                  </div>
                </li>
              </ul>
              <div class="dropdown__footer">
                <a href="#" class="dropdown__footer-link">View all notifications</a>
              </div>
            </div>
          </div>
          
          <!-- User Menu -->
          <div class="dashboard-header__user">
            <button class="dashboard-header__user-btn" id="userMenuBtn" aria-label="User menu" aria-haspopup="true" aria-expanded="false" aria-controls="userDropdown">
              <div class="dashboard-header__avatar">JD</div>
              <span class="dashboard-header__user-name">John Doe</span>
              <svg class="dashboard-header__user-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>
            
            <div class="dropdown" id="userDropdown" role="menu" aria-labelledby="userMenuBtn">
              <div class="dropdown__header">
                <div class="dropdown__title">John Doe</div>
                <div class="dropdown__subtitle">john@example.com</div>
              </div>
              <ul class="dropdown__list">
                <li>
                  <a href="#" class="dropdown__item" role="menuitem">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                      <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    Profile
                  </a>
                </li>
                <li>
                  <a href="#" class="dropdown__item" role="menuitem">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <circle cx="12" cy="12" r="3"></circle>
                      <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06-.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                    Settings
                  </a>
                </li>
                <li>
                  <a href="#" class="dropdown__item" role="menuitem">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    Billing
                  </a>
                </li>
              </ul>
              <div class="dropdown__divider"></div>
              <ul class="dropdown__list">
                <li>
                  <a href="{{relativePath 'login.html'}}" class="dropdown__item" role="menuitem" id="logoutBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                      <polyline points="16 17 21 12 16 7"></polyline>
                      <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                    Log out
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </header>
      
      <!-- Content Area -->
      <main class="dashboard-content">
        <!-- Stats Grid -->
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-card__header">
              <span class="stat-card__label">Total Revenue</span>
              <div class="stat-card__icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="12" y1="1" x2="12" y2="23"></line>
                  <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                </svg>
              </div>
            </div>
            <div class="stat-card__value">$48,294</div>
            <span class="stat-card__change stat-card__change--positive">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="23 6 13.5 8.5 8.5 10.5 1 18"></polyline>
                <polyline points="17 6 23 6 23 12"></polyline>
              </svg>
              +12.5%
            </span>
          </div>
          
          <div class="stat-card">
            <div class="stat-card__header">
              <span class="stat-card__label">Active Users</span>
              <div class="stat-card__icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              </div>
            </div>
            <div class="stat-card__value">2,847</div>
            <span class="stat-card__change stat-card__change--positive">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="23 6 13.5 8.5 8.5 10.5 1 18"></polyline>
                <polyline points="17 6 23 6 23 12"></polyline>
              </svg>
              +8.2%
            </span>
          </div>
          
          <div class="stat-card">
            <div class="stat-card__header">
              <span class="stat-card__label">New Signups</span>
              <div class="stat-card__icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="8.5" cy="7" r="4"></circle>
                  <line x1="20" y1="8" x2="20" y2="14"></line>
                  <line x1="23" y1="11" x2="17" y2="11"></line>
                </svg>
              </div>
            </div>
            <div class="stat-card__value">384</div>
            <span class="stat-card__change stat-card__change--positive">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="23 6 13.5 8.5 8.5 10.5 1 18"></polyline>
                <polyline points="17 6 23 6 23 12"></polyline>
              </svg>
              +24.1%
            </span>
          </div>
          
          <div class="stat-card">
            <div class="stat-card__header">
              <span class="stat-card__label">Bounce Rate</span>
              <div class="stat-card__icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
            </div>
            <div class="stat-card__value">42.3%</div>
            <span class="stat-card__change stat-card__change--negative">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"></polyline>
                <polyline points="17 18 23 18 23 12"></polyline>
              </svg>
              -2.4%
            </span>
          </div>
        </div>
        
        <!-- Users Data Table -->
        <div class="dashboard-card dashboard-card--full">
          <div class="dashboard-card__header">
            <h2 class="dashboard-card__title">All Users</h2>
            <div class="dashboard-card__actions">
              <button class="btn btn--primary" id="addUserBtn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="12" y1="5" x2="12" y2="19"></line>
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Add User
              </button>
            </div>
          </div>
          
          <!-- Table Toolbar -->
          <div class="table-toolbar">
            <div class="table-toolbar__search">
              <div class="search-input">
                <svg class="search-input__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="11" cy="11" r="8"></circle>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
                <input type="text" class="search-input__field" id="userSearch" placeholder="Search users..." aria-label="Search users">
              </div>
            </div>
            <div class="table-toolbar__actions" id="bulkActions" style="display: none;">
              <span class="table-toolbar__selected"><span id="selectedCount">0</span> selected</span>
              <button class="btn btn--danger btn--sm" id="bulkDeleteBtn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                </svg>
                Delete
              </button>
              <button class="btn btn--secondary btn--sm" id="exportBtn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                  <polyline points="7 10 12 15 17 10"></polyline>
                  <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Export
              </button>
            </div>
          </div>
          
          <div class="dashboard-card__content" style="padding: 0;">
            <!-- Responsive Table Wrapper -->
            <div class="table-wrapper">
              <table class="data-table data-table--full" id="usersTable">
                <thead>
                  <tr>
                    <th class="data-table__checkbox">
                      <label class="checkbox">
                        <input type="checkbox" class="checkbox__input" id="selectAll">
                        <span class="checkbox__box"></span>
                      </label>
                    </th>
                    <th class="data-table__sortable" data-sort="name">
                      <span>User</span>
                      <svg class="data-table__sort-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="18 15 12 9 6 15"></polyline>
                      </svg>
                    </th>
                    <th class="data-table__sortable" data-sort="role">
                      <span>Role</span>
                      <svg class="data-table__sort-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="18 15 12 9 6 15"></polyline>
                      </svg>
                    </th>
                    <th class="data-table__sortable" data-sort="status">
                      <span>Status</span>
                      <svg class="data-table__sort-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="18 15 12 9 6 15"></polyline>
                      </svg>
                    </th>
                    <th class="data-table__sortable" data-sort="joined">
                      <span>Joined</span>
                      <svg class="data-table__sort-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="18 15 12 9 6 15"></polyline>
                      </svg>
                    </th>
                    <th class="data-table__actions">Actions</th>
                  </tr>
                </thead>
                <tbody id="usersTableBody">
                </tbody>
              </table>
            </div>
            
            <!-- Pagination -->
            <div class="pagination">
              <div class="pagination__info">
                Showing <span id="paginationStart">1</span> to <span id="paginationEnd">10</span> of <span id="paginationTotal">0</span> users
              </div>
              <div class="pagination__controls">
                <button class="pagination__btn" id="prevPage" disabled>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6"></polyline>
                  </svg>
                </button>
                <div class="pagination__pages" id="paginationPages">
                </div>
                <button class="pagination__btn" id="nextPage">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9 18 15 12 9 6"></polyline>
                  </svg>
                </button>
              </div>
              <div class="pagination__size">
                <select class="select select--sm" id="pageSize">
                  <option value="10">10</option>
                  <option value="25">25</option>
                  <option value="50">50</option>
                </select>
                <span>per page</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Recent Activity - FULL WIDTH, outside grid -->
        <div class="dashboard-card dashboard-card--full" style="margin-top: var(--space-6);">
          <div class="dashboard-card__header">
